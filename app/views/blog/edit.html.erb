<h1>Editing post</h1>

<% form_for(@post, :url => "/blog/update/#{@post.id}") do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
     <%= f.text_area :body,
                   :cols => 60,
                   :rows => (@post.body.blank? ? 10 : [[10, @post.body.length / 50].max, 100].min),
                   :accesskey => accesskey(:edit),
                   :class => 'wiki-edit',
                   :no_label => true %>
  
	<%= wikitoolbar_for 'post_body' %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

